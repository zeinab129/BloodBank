<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.splashCycle.SplashFragment"
    android:background="@color/gray"
    android:layoutDirection="ltr">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_top_corner"
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="-15dp"/>


    <ImageView
        android:id="@+id/splash_fragment_logo"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:src="@drawable/ic_logo_red"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_fragment_logo"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-100dp"
            android:textColor="@color/red"
            android:text="بنك الدم"
            android:fontFamily="@font/shekari_font"
            android:textSize="55sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_bottom_corner"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-30dp"
        android:layout_marginRight="-20dp"/>

</RelativeLayout>