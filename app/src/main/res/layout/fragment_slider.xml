<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/slider_fragment_vp_slides"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/slider_fragment_rl_navigation_bar"
        android:layout_marginBottom="@dimen/dim_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/slider_fragment_rl_navigation_bar"/>

    <RelativeLayout
        android:id="@+id/slider_fragment_rl_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.18"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/slider_fragment_ll_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim_10dp"
            android:orientation="horizontal"/>

        <ImageButton
            android:id="@+id/slider_fragment_ib_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dim_10dp"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>