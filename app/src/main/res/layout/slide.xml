<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/slide_iv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.4"
        tools:src="@drawable/slide1"/>

    <TextView
        android:id="@+id/slide_tv_text"
        android:layout_below="@id/slide_iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_here"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/dim_10dp"
        android:layout_marginEnd="@dimen/dim_10dp"
        android:layout_marginTop="@dimen/dim_8dp"
        android:textSize="@dimen/dim_20sp"
        app:layout_constraintTop_toBottomOf="@id/slide_iv_image"
        tools:text="@string/slide1_desc"/>

</androidx.constraintlayout.widget.ConstraintLayout>