<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.HomeCycleActivity"
    android:orientation="vertical"
    android:id="@+id/home_cycle_activity">

    <include layout="@layout/tool_bar" />

    <FrameLayout
        android:id="@+id/home_cycle_activity_fl_home_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/home_cycle_activity_rg_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40dp"
        android:background="@color/red"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_cycle_activity_iv_home"
                style="@style/bottom_navigation_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4dp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/home_cycle_activity_rb_home"
                style="@style/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_cycle_activity_iv_profile"
                style="@style/bottom_navigation_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4dp" />

            <RadioButton
                android:id="@+id/home_cycle_activity_rb_profile"
                style="@style/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_prof" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_cycle_activity_iv_notification"
                style="@style/bottom_navigation_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RadioButton
                    android:id="@+id/home_cycle_activity_rb_notification"
                    style="@style/bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_notification" />

                <TextView
                    android:id="@+id/home_cycle_activity_tv_notification_count"
                    android:layout_width="@dimen/dim_14dp"
                    android:layout_height="@dimen/dim_14dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dim_33dp"
                    android:background="@drawable/shape_notification_count"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dim_10sp"
                    android:visibility="invisible"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_cycle_activity_iv_more"
                style="@style/bottom_navigation_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4dp" />

            <RadioButton
                android:id="@+id/home_cycle_activity_rb_more"
                style="@style/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_more" />

        </LinearLayout>

    </RadioGroup>

</LinearLayout>