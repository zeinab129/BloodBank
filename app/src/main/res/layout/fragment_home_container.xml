<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.homeCycle.HomeContainerFragment"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_container_fragment_tl_tap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:tabTextColor="@color/white"
        app:tabIndicatorColor="@color/gray_dark"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/home_container_fragment_vp_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:layoutDirection="locale"
        />

    <FrameLayout
        android:id="@+id/home_container_fragment_fl_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>